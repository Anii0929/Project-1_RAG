[flake8]
max-line-length = 120
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    chroma_db,
    .eggs,
    *.egg
per-file-ignores =
    backend/app.py:E402,F811,F401
    backend/tests/*.py:F401,E402,F841
    backend/models.py:F401
    backend/rag_system.py:F401
    backend/search_tools.py:F401
    backend/vector_store.py:F401
    backend/ai_generator.py:E501