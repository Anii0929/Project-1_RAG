[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501,E402
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    # Tests can use more complex assertions
    tests/*:E501
    # Ignore imports in __init__.py files
    __init__.py:F401